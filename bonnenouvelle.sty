\newcommand{\dvquote}[3][0.9\textwidth]{%
  \setlength{\outparbox}{#1}%
  \setlength{\vspaceparbox}{-0.07\inparbox}%
  %\vfill
  \begin{center}\parbox{\outparbox}{%
    \begin{Center}%
    \hyphenpenalty=10000%
    \begin{itshape}#2\end{itshape}\\[1.2mm]
