% dvquote
\usepackage{fancybox}
\usepackage{ragged2e}
\newlength{\outparbox}%
\newlength{\inparbox}%
\newlength{\vspaceparbox}%
\newcommand{\dvquote}[3][0.9\textwidth]{%
  \setlength{\outparbox}{#1}%
  \setlength{\vspaceparbox}{-0.07\inparbox}%
  %\vfill
  \begin{center}\parbox{\outparbox}{%
    \begin{Center}%
    \hyphenpenalty=10000%
    \begin{itshape}#2\end{itshape}\\[1.2mm]
    \ocadr{}\textsc{#3}%
    \end{Center}%
  }\end{center}%\vspace{\vspaceparbox}%
  %\vfill
}

% dvepigraph
\newcommand{\dvepigraphrefstyle}{\textsc}
\newcommand{\dvepigraph}[3][1]{%
\ifcase#1
% 0: do nothing
\or% 1: use epigraph
  \begin{savenotes}
  \epigraph{%
    #2
  }{\dvepigraphrefstyle{#3}}
  \end{savenotes}
\or% 2, use multicols
  \begin{multicols}{#1}
    \epigraphsize%
    #2

    \raggedleft{%
    \rule[.5ex]{0.95\epigraphwidth}{\epigraphrule}
    \dvepigraphrefstyle{#3}}
  \end{multicols}
\fi
}

