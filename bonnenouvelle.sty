}
\newcommand{\dvepigraph}[3][1]{%
\par\vspace{0pt plus -1fill}
\ifcase#1
% 0: do nothing
\or% 1: use epigraph
  \begin{savenotes}
  \epigraph{%
    \setlength{\parindent}{1em}
    #2
  }{\dvepigraphrefstyle{#3}}
  \end{savenotes}
\or% 2, use multicols
  \begin{multicols}{#1}
    \epigraphsize%
    #2

    \raggedleft{%
    \dvepigraphtwocolsrule
    \dvepigraphrefstyle{#3}}
  \end{multicols}
\fi
\par\vspace{0pt plus 1fil}
}

